<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorButtonLightBackgroundRipple">
    <item android:id="@android:id/mask">

        <shape  android:shape="rectangle">
            <corners android:radius="2dp"/>
        </shape>

    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorButtonLightBackground"/>
            <stroke android:color="@color/colorButtonLightBackgroundStroke" android:width="2dp"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>

</ripple>